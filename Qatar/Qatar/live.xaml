<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Qatar.live" Title="Live">
    <StackLayout>
        <Image Source="doha.png"/>
        <Label>

            <Label.FormattedText>
                <FormattedString>
                    <Span Text="If you want to follow the events of the championship, click " BackgroundColor="#800000" TextColor="White" FontSize="16" />
                    <Span Text="--HERE--"
                  TextColor="#800000"
                  TextDecorations="Underline"
                         FontSize="90"
                          FontFamily="Calibri"
                       
                          >
                        <Span.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding TapCommand}"
                                          CommandParameter="https://www.qatar2022.qa/en/home" />
                        </Span.GestureRecognizers>
                    </Span>

                </FormattedString>
            </Label.FormattedText>
        </Label>
    </StackLayout>

</ContentPage>
